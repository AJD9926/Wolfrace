			<grant type="Racial Trait" id="ID_RACIAL_TRAIT_ONI_SUBRACE" />
			<grant type="Racial Trait" id="ID_RACIAL_TRAIT_CLAWS" />
			<grant type="Racial Trait" id="ID_RACIAL_TRAIT_YOKAI_RESISTANCE" />
